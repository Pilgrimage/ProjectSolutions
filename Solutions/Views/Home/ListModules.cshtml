@model List<Solutions.Models.Module>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        <h2 style="margin-top:100px">Browse a chapter to post your solution or to find other's </h2>

        <table class="table table-hover" style="margin-top:100px">
            <tr>
                <th>
                    Modules:
                </th>
                <th>
                    Number of courses:
                </th>
            </tr>
            @foreach (var module in Model)
            {
                <tr onclick="location.href = '@(Url.Action("ListCourses", "Home", new { @moduleId = module.Id }))'">

                        <td>
                            <h1>
                                @module.Name
                            </h1>
                        </td>

                        <td>
                            <h1>
                               @module.Courses.Count
                            </h1>
                        </td>
                    </tr>
            }
        </table>
    </div>
</div>
<hr />